<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F3F3F3"
        app:cardCornerRadius="@dimen/dp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8">

                <Space
                    android:id="@+id/space_dum_s1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_s1"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp79"
                    app:cardCornerRadius="@dimen/dp10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/space_dum_s1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_provider_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/make_up1" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/vendor_text_provider_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:text="Matikaas Beauty Lounge"
                    android:textColor="#161616"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_s1"
                    app:layout_constraintTop_toBottomOf="@id/space_dum_s1" />

                <TextView
                    android:id="@+id/vendor_text_rating_provider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/star_svg"
                    android:drawablePadding="@dimen/dp5"
                    android:text="4.8"
                    android:textColor="#757575"
                    app:layout_constraintEnd_toEndOf="@+id/vendor_text_provider_name"
                    app:layout_constraintStart_toStartOf="@+id/vendor_text_provider_name"
                    app:layout_constraintTop_toBottomOf="@id/vendor_text_provider_name" />

                <TextView
                    android:id="@+id/vendor_text_provider_job"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/g_check_svg"
                    android:drawablePadding="@dimen/dp5"
                    android:text="88 jobs completed"
                    android:textColor="#757575"
                    app:layout_constraintEnd_toEndOf="@+id/vendor_text_rating_provider"
                    app:layout_constraintStart_toStartOf="@+id/vendor_text_rating_provider"
                    app:layout_constraintTop_toBottomOf="@id/vendor_text_rating_provider" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vendor_text_provider_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ellipse_23"
                        android:drawablePadding="@dimen/dp10"
                        android:textColor="@color/gray"
                        android:text="Price starts from â‚¹599"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vendor_text_provider_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ellipse_23"
                        android:drawablePadding="@dimen/dp10"
                        android:textColor="@color/gray"
                        android:text="Specialises in Airbrush Make-up"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/vendor_text_provider_des1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp8"
                    android:layout_marginTop="@dimen/dp5"
                    android:drawablePadding="@dimen/dp10"
                    android:background="@drawable/addres_round_btn"
                    android:textColor="@color/black"
                    android:text="Click to view vendor profile"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:background="@color/black">

                <TextView
                    android:id="@+id/button_listof_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>